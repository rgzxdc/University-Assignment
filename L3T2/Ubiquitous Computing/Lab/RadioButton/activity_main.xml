<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/ques1TextviewID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35sp"
        android:gravity="center"
        android:text="What is 7+8=?"
        android:textSize="40sp"
        android:textStyle="bold" />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ques1RadioGroupID">
        <RadioButton
            android:id="@+id/ques1RadioBtn1ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="14?"
            android:textSize="35sp" />
        <RadioButton
            android:id="@+id/ques1RadioBtn2ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="13?"
            android:textSize="35sp" />
        <RadioButton
            android:id="@+id/ques1RadioBtn3ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="15?"
            android:textSize="35sp" />
    </RadioGroup>

    <Button
        android:id="@+id/quesnextBtnID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="40sp"
        android:text="next"
        android:onClick="nextFunction"
        android:textSize="35sp" />

</LinearLayout>